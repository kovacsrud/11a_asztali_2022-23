<Window x:Class="WpfAdatkotesDatagrid.FelfedezesekWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAdatkotesDatagrid"
        mc:Ignorable="d"
        Title="FelfedezesekWin" Height="450" Width="800">
    <Grid>
        <DataGrid  ItemsSource="{Binding Felfedezesek}" ColumnWidth="*" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Év" Binding="{Binding Ev}"/>
                <DataGridTextColumn Header="Elem" Binding="{Binding Elem}"/>
                <DataGridTextColumn Header="Rendszám" Binding="{Binding Rendszam}" />
                <DataGridTextColumn Header="Felfedező" Binding="{Binding Felfedezo}" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
